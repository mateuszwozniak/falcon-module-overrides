{
  "debug": false,
  "port": 4000,
  "logLevel": "info",
  "verboseEvents": false,
  "endpoints": {
    "magento": {
      "package": "@deity/falcon-magento2-api/src/endpoints",
      "config": {
        "host": "magento.deity.io",
        "protocol": "https"
      }
    }
  },
  "apis": {
    "api-wordpress": {
      "package": "@deity/falcon-wordpress-api",
      "config": {
        "host": "wordpress.deity.io",
        "protocol": "https",
        "apiPrefix": "/wp-json/wp/v2"
      }
    },
    "api-magento2": {
      "package": "@deity/falcon-magento2-api",
      "config": {
        "host": "magento.deity.io",
        "protocol": "https",
        "username": "node-api",
        "password": "3de3f3a262",

        "currency": {
          "symbol": "EUR"
        },

        "demo": true,
        "enableSwitcher": true,
        "enableAutoDetection": false,
        "geoMapping": {
          "*": "default",
          "NL": "nl_store",
          "PL": "pl_store",
          "FR": "fr_store",
          "DE": "de_store"
        },
        "languageMapping": {
          "en": ["*"],
          "nl": ["nl_store"],
          "pl": ["pl_store"],
          "de": ["de_store"],
          "fr": ["fr_store"]
        },
        "codeMapping": {
          "default": "default",
          "nl_store": "nl_store",
          "pl_store": "pl_store",
          "fr_store": "fr_store",
          "de_store": "de_store"
        }
      }
    }
  },
  "extensions": {
    "blog": {
      "package": "@deity/falcon-blog-extension",
      "config": {
        "api": "api-wordpress"
      }
    },
    "shop": {
      "package": "@deity/falcon-shop-extension",
      "config": {
        "api": "api-magento2"
      }
    }
  },
  "session": {
    "keys": ["secret key"],
    "options": {
      "key": "session-key",
      "maxAge": 86400000,
      "overwrite": true,
      "httpOnly": true,
      "signed": true,
      "rolling": false,
      "renew": false
    }
  }
}
